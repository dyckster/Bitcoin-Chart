<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="UiKitTextStyle">
        <item name="android:fontFamily">@font/merriweather</item>
        <item name="android:fontFeatureSettings">lnum</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="UiKitTextStyle.Caption" parent="UiKitTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="UiKitTextStyle.Body" parent="UiKitTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="UiKitTextStyle.Body.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="UiKitTextStyle.Amount" parent="UiKitTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/libre_franklin_semibold</item>
    </style>

    <style name="UiKitTextStyle.Header" parent="UiKitTextStyle">
        <item name="android:fontFamily">@font/libre_franklin_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="UiKitTextStyle.Toolbar" parent="UiKitTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/libre_franklin_semibold</item>
    </style>
</resources>